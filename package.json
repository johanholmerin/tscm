{
  "name": "tscm",
  "version": "0.1.1",
  "description": "TypeScript Compiler Macros",
  "author": "Johan Holmerin <johan@holmer.in>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johanholmerin/tscm.git"
  },
  "main": "./typescript/lib/typescript.js",
  "typings": "./typescript/lib/typescript.d.ts",
  "bin": {
    "tscm": "./bin/tscm",
    "tsserverm": "./bin/tsserverm"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@babel/generator": "^7.15.4",
    "@babel/parser": "^7.15.4",
    "@babel/plugin-syntax-jsx": "^7.14.5",
    "@babel/plugin-syntax-typescript": "^7.14.5",
    "@babel/traverse": "^7.15.4",
    "@babel/types": "^7.15.6",
    "magic-string": "^0.25.7",
    "resolve": "^1.20.0",
    "source-map-js": "^0.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/template": "^7.15.4",
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.24",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.8",
    "jest": "^27.2.1",
    "jest-file-snapshot": "^0.5.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.0",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "typescript": "^4.0.0"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint '**/*.js' --fix",
    "lint:check": "eslint '**/*.js'",
    "format": "prettier '**/*.{js,ts}' --write",
    "format:check": "prettier '**/*.{js,ts}' --check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "npm run format"
    ],
    "*.ts": [
      "npm run format"
    ]
  }
}
